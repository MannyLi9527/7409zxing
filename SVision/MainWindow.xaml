<Window
    x:Class="Vision.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Vision"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450" Background="#252526"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    WindowStyle="None"
    MouseMove="Window_MouseMove"
    ResizeMode="CanResize"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        
            <Grid Grid.RowSpan="2" Margin=" 5 5 5 15" HorizontalAlignment="Left">
                <Image  Source="./图片/sunny.ico" />
            </Grid>
        <Grid Margin="2" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Padding="0" Width="25" Height="25" Name="btn_MiniSize"  Content="─" Background="#0033ff" Margin="4 0"/>
            <Button Padding="0" Width="25" Height="25" Grid.Column="1" Name="btn_MaxSize" Content="☐" Background="#0033ff" Margin="4 0"/>
            <Button Padding="0" Height="25" Width="25" Grid.Column="2" Name="btn_Close" Content="✕" HorizontalAlignment="Center" Background="Red" Margin=" 4 0 0 0"/>
        </Grid>

        <!--标题信息显示-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

           
            <TextBox MaxWidth="350" FontSize="45"
                        BorderThickness="0"
                        FontWeight="Bold"
                     Foreground="AliceBlue"
                        Background="Transparent"
                        Name="inputTextBox" MinWidth="100" Height="65" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            

            <Grid Grid.Row="1" Margin="3">
                <TextBlock  
                    x:Name="mouseValue"                 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="Black" />
            </Grid>
        </Grid>

        
        <!--图像、参数窗口显示-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="mouseFollower"
                Panel.ZIndex="1"
                FontSize="10"
                Foreground="WhiteSmoke"
                IsHitTestVisible="False"
                Grid.ColumnSpan="3"/>

            <!--工位1-->
            <!--<Grid x:Name="view01" Grid.Column="0" >
                <local:MainViewCtrl />
            </Grid>-->

            <!--工位2-->
            <Grid x:Name="view02" Grid.Column="1">
                <local:SomaViewCtrl/>
            </Grid>

            <!--工位2-->
            <!--<Grid x:Name="view03" Grid.Column="2">
                <local:MainViewCtrl />
            </Grid>-->

        </Grid>
    </Grid>
</Window>
