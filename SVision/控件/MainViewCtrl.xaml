<UserControl
    x:Class="Vision.MainViewCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Vision"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="#252526"
    Loaded="UserControl_Loaded" Foreground="White"
    d:DesignHeight="400" d:DesignWidth="400">


    <Border Margin="5 0" CornerRadius="3" BorderThickness="2" BorderBrush="#0078D4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="7*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <Button Margin="3" Background="#0078D4" Content="参数设置" Command="{Binding ParaSetCommand}" CommandParameter="JT"/>
                        </StackPanel>

                        <Border Grid.Row="1" Margin="3" BorderBrush="Black" BorderThickness="0.5">
                            <Grid ClipToBounds="True">
                                <Image
                            x:Name="Imc_PlayerForCamera"
                            Panel.ZIndex="0"
                            ClipToBounds="True"
                            MouseLeftButtonDown="Imc_Player_MouseLeftButtonDown"
                            MouseLeftButtonUp="Imc_Player_MouseLeftButtonUp"
                            MouseMove="Imc_Player_MouseMove"
                            MouseWheel="Imc_Player_MouseWheel"
                            Source="{Binding ImSrc_test, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Stretch="Uniform">

                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform />
                                            <ScaleTransform />
                                            <RotateTransform />
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Grid>
                        </Border>


                    </Grid>


                    <Grid Grid.Column="1" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.3*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>

                        <Viewbox Margin="3" HorizontalAlignment="Center">
                            <TextBlock Foreground="{Binding DetecColor}">
                                                <Run Text="{Binding DetecResult}" />
                            </TextBlock>
                        </Viewbox>

                        <ScrollViewer Grid.Row="1">
                            <Grid ClipToBounds="True">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>

                                <Grid  Grid.Row="0" Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="4*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" x:Name="AutoStart" Content="{Binding ButtonStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                    Command="{Binding CamCommand}" HorizontalAlignment="Left" Visibility="Hidden"/>

                                    <!--<Button Grid.Column="1"  Content="{Binding ButtonStr,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" />-->
                                </Grid>

                                <Grid Grid.Row="1" Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="运行模式" VerticalAlignment="Center" />
                                    <ComboBox Grid.Column="1"                                
                                                    IsEnabled="{Binding isConnect}"
                                                    SelectedIndex="{Binding SamplingMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <ComboBoxItem Content="自动模式" />
                                        <ComboBoxItem Content="手动模式" />
                                    </ComboBox>
                                </Grid>

                                <Grid  Grid.Row="2" Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="4*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="1" Background="#0078D4" Content="触发测试"  HorizontalAlignment="Left"                                                      
                                                                Command="{Binding TriggerCommand}"                                                    
                                                                IsEnabled="{Binding isConnect}">
                                        <!--<Button.Visibility>
                                            <MultiBinding Converter="{StaticResource CACG_Conv}">
                                                <Binding Path="SamplingMode" />
                                                <Binding Path="CommboxID[0]" />
                                            </MultiBinding>
                                        </Button.Visibility>-->
                                    </Button>
                                </Grid>

                                <!--<Grid Grid.Row="3" Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="显示方式" Grid.Column="0" VerticalAlignment="Center"/>
                                    <ComboBox Grid.Column="1"                                                   
                                                    SelectedIndex="{Binding ShowMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <ComboBoxItem Content="原始图像" />
                                        <ComboBoxItem Content="定位灰度" />
                                    </ComboBox>
                                </Grid>-->

                                <Grid Grid.Row="4" Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="镜筒角度" VerticalAlignment="Center" />
                                    <hc:NumericUpDown Background="Transparent" Foreground="White" Grid.Column="1" IsReadOnly="True" 
                                                    Minimum="0"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding AngJT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid Grid.Row="5" Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="X偏移" VerticalAlignment="Center" />
                                    <hc:NumericUpDown Grid.Column="1" IsReadOnly="True" Background="Transparent" Foreground="White"
                                                    Minimum="-999"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding Xdeviation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid Grid.Row="6" Margin="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Y偏移" />
                                    <hc:NumericUpDown Grid.Column="1" IsReadOnly="True" Background="Transparent" Foreground="White"
                                                    Minimum="-999"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding Ydeviation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid  Grid.Row="7" Margin="3">
                                    <Grid Margin="3">
                                        <Button Command="{Binding ExitCommand}" Content="退出" Background="#0078D4"/>
                                    </Grid>
                                </Grid>

                            </Grid>
                        </ScrollViewer>
                    </Grid>

                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="7*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Margin="3" Background="#0078D4" Content="参数设置" Command="{Binding ParaSetCommand}" CommandParameter="JP"/>
                    </StackPanel>


                    <Border Grid.Row="1" Margin="3" BorderBrush="Black" BorderThickness="0.5">
                        <Grid ClipToBounds="True">
                            <Image
                            x:Name="Imc_PlayerForCamera2"
                            Panel.ZIndex="0"
                            ClipToBounds="True"
                            MouseLeftButtonDown="Imc_Player_MouseLeftButtonDown"
                            MouseLeftButtonUp="Imc_Player_MouseLeftButtonUp"
                            MouseMove="Imc_Player_MouseMove"
                            MouseWheel="Imc_Player_MouseWheel2"
                            Source="{Binding ImSrc_test2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Stretch="Uniform">

                                <Image.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="连续/触发" Command="{Binding ModeSwitchCommand}" CommandParameter="JP"/>
                                        <MenuItem Header="参数界面设置" Command="{Binding ParaSetCommand}" CommandParameter="4" />
                                    </ContextMenu>
                                </Image.ContextMenu>



                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <TranslateTransform />
                                        <ScaleTransform />
                                        <RotateTransform />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </Grid>
                    </Border>
                </Grid>



                <Grid Grid.Column="1" Margin="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.3*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0" Margin="3" HorizontalAlignment="Center">
                        <TextBlock Foreground="{Binding DetecColor2}">
                                                <Run Text="{Binding DetecResult2}" />
                        </TextBlock>
                    </Viewbox>

                    <ScrollViewer Grid.Row="1">
                        <Grid ClipToBounds="True">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="镜片角度" />
                                <hc:NumericUpDown Grid.Column="1" IsReadOnly="True" Background="Transparent" Foreground="White"
                                                    Minimum="0"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding AngJP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <Grid Grid.Row="1" Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="角度偏移" />
                                <hc:NumericUpDown Grid.Column="1" Background="Transparent" Foreground="White"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding AngSend, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <Grid Grid.Row="2" Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="X偏移2" />
                                <hc:NumericUpDown Grid.Column="1" IsReadOnly="True" Background="Transparent" Foreground="White"
                                                    Minimum="-999"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding Xdeviation2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <Grid Grid.Row="3" Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Y偏移2" />
                                <hc:NumericUpDown Grid.Column="1" IsReadOnly="True" Background="Transparent" Foreground="White"
                                                    Minimum="-999"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding Ydeviation2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <Grid Grid.Row="4" Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="组装角度" />
                                <hc:NumericUpDown Grid.Column="1"  Background="Transparent" Foreground="White"                                                  
                                                    Minimum="0"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding AngZuzhuang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <Grid Grid.Row="5" Margin="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="4*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="发送数据" />
                                <TextBlock Grid.Column="1" Foreground="{Binding DetecColor}" TextWrapping="Wrap">
                                                    <Run Text="{Binding resultCalculation}" />
                                </TextBlock>
                            </Grid>

                        </Grid>
                    </ScrollViewer>


                </Grid>

            </Grid>
        </Grid>
    </Border>
    
</UserControl>
