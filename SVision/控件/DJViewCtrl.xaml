<UserControl x:Class="Vision.DJViewCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Vision"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="400" d:DesignWidth="320">
    <UserControl.Resources>
        <local:CACG_Conv x:Key="CACG_Conv"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid>
                <Border Grid.Column="0" Margin="3" BorderBrush="Black" BorderThickness="0.5">
                    <Grid ClipToBounds="True">
                        <Image x:Name="Imc_PlayerForCamera" 
                                   Panel.ZIndex="0"       
                                   ClipToBounds="True"
                                   MouseLeftButtonDown="Imc_Player_MouseLeftButtonDown"
                                   MouseLeftButtonUp="Imc_Player_MouseLeftButtonUp"
                                   MouseMove="Imc_Player_MouseMove"
                                   MouseWheel="Imc_Player_MouseWheel"
                                   Stretch="Uniform"
                                   Source="{Binding ImSrc_test , Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >

                            <Image.RenderTransform>
                                <TransformGroup>
                                    <TranslateTransform/>
                                    <ScaleTransform />
                                    <RotateTransform />
                                </TransformGroup>
                            </Image.RenderTransform>

                        </Image>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid>
                <Border Grid.Column="0" Margin="3" BorderBrush="Black" BorderThickness="0.5">
                    <Grid ClipToBounds="True">
                        <TabControl SelectedIndex="{Binding selectedIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">

                            <TabItem Header="显示">
                                <ScrollViewer>
                                    <Grid>
                                        <Grid.ColumnDefinitions >
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Margin="3" BorderBrush="Black" BorderThickness="0.5">
                                            <Grid ClipToBounds="True">

                                                <Grid.RowDefinitions >
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                </Grid.RowDefinitions>

                                                <Grid  Grid.Row="0" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0" x:Name="AutoStart" Content="{Binding ButtonStr,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                        Command="{Binding CamCommand}" HorizontalAlignment="Left" Visibility="Hidden"/>

                                                    <Button Grid.Column="1"  Content="{Binding ButtonStr,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" />
                                                </Grid>

                                                <Grid Grid.Row="1" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="运行模式" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <ComboBox Grid.Column="1"
                                                        IsEnabled="{Binding isConnect}"
                                                        SelectedIndex="{Binding SamplingMode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                                        <ComboBoxItem Content="自动模式" />
                                                        <ComboBoxItem Content="手动模式" />
                                                    </ComboBox>
                                                </Grid>

                                                <Grid  Grid.Row="2" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="1" Content="触发测试" HorizontalAlignment="Left" 
                                                        IsEnabled="{Binding isConnect}"
                                                        Command="{Binding TriggerCommand}">
                                                        <Button.Visibility>
                                                            <MultiBinding Converter="{StaticResource CACG_Conv}">
                                                                <Binding Path="SamplingMode" />
                                                                <Binding Path="CommboxID[0]" />
                                                            </MultiBinding>
                                                        </Button.Visibility>
                                                    </Button>
                                                </Grid>

                                                <Grid Grid.Row="3" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="显示方式" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <ComboBox Grid.Column="1"
                                            SelectedIndex="{Binding ShowMode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                                        <ComboBoxItem Content="原始图像" />
                                                        <ComboBoxItem Content="定位灰度" />
                                                    </ComboBox>
                                                </Grid>

                                                <Grid Grid.Row="4" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                    Grid.Column="0"
                                                    VerticalAlignment="Center"
                                                    Text="镜筒角度" />
                                                    <hc:NumericUpDown
                                                    Grid.Column="1"
                                                    IsReadOnly="True"
                                                    Minimum="0"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding AngJT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

                                                <Grid  Grid.Row="5" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="X偏移" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" IsReadOnly="True"
                                                                  Minimum="-999" 
                                                                  ValueFormat="#0.000"
                                                                  Value="{Binding Xdeviation,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid  Grid.Row="6" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="Y偏移" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" IsReadOnly="True"
                                                                  Minimum="-999" 
                                                                  ValueFormat="#0.000"
                                                                  Value="{Binding Ydeviation,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="7" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                    Grid.Column="0"
                                                    VerticalAlignment="Center"
                                                    Text="点胶角度" />
                                                    <hc:NumericUpDown
                                                    Grid.Column="1"
                                                    Minimum="0"
                                                    ValueFormat="#0.000"
                                                    Value="{Binding AngDJ, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

                                                <Grid  Grid.Row="8" Margin="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0" Margin="2">
                                                        <TextBlock Text="发送数据↓" Grid.Column="0" VerticalAlignment="Center"/>
                                                    </Grid>

                                                    <Grid Grid.Column="1" Margin="2">
                                                        <Button Content="设置" Command="{Binding SetCommand}"/>
                                                    </Grid>

                                                    <Grid Grid.Column="2" Margin="2">
                                                        <Button Content="退出" Command="{Binding ExitCommand}"/>
                                                    </Grid>
                                                </Grid>

                                                <Grid  Grid.Row="9" Margin="2">
                                                    <TextBlock  Foreground="{Binding DetecColor}" TextWrapping="Wrap">
                                                       <Run Text="{Binding resultCalculation}"/>
                                                    </TextBlock>
                                                </Grid>

                                            </Grid>
                                        </Border>

                                        <Grid  Grid.Column="1" Margin="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="2*"/>
                                            </Grid.RowDefinitions>

                                            <Viewbox Grid.Row="0" Margin="3" HorizontalAlignment="Center">
                                                <TextBlock Foreground="{Binding DetecColor}">
                                               <Run Text="{Binding DetecResult}"/>
                                                </TextBlock>
                                            </Viewbox>


                                            <Grid Grid.Row="1"  VerticalAlignment="Top">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                </Grid.ColumnDefinitions>
                                                <Button  Grid.Column="0"  HorizontalContentAlignment="Left" 
                                             Content="清" 
                                             Command="{Binding NGClearCommand}"/>
                                                <hc:NumericUpDown
                                                    Grid.Column="1"
                                                    IsReadOnly="True"
                                                    Minimum="0"
                                                    ValueFormat="#0"
                                                    Foreground="Red"                                         
                                                    Value="{Binding NGQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                                            </Grid>

                                        </Grid>

                                    </Grid>
                                </ScrollViewer>
                            </TabItem>

                            <TabItem Header="定位" IsEnabled="{Binding isEnabled,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                <ScrollViewer>
                                    <Grid>
                                        <Grid.ColumnDefinitions >
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Margin="3" BorderBrush="Black" BorderThickness="0.5">
                                            <Grid ClipToBounds="True">

                                                <Grid.RowDefinitions >
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0" Margin="3">
                                                    <TextBlock Text="JT定位参数设置" 
                                                   VerticalAlignment="Center"  
                                                   HorizontalAlignment="Center" 
                                                   Foreground="Blue"/>
                                                </Grid>

                                                <Grid Grid.Row="1" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="定位X" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding DefultX,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="2" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="定位Y" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding DefultY,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="3" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="内界限" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding MinRadius,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="4" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="外界限" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding MaxRadius,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="5" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="扫描方向" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <ComboBox Grid.Column="1"
                                                  SelectedIndex="{Binding ScanDirection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                                        <ComboBoxItem Content="由内到外" />
                                                        <ComboBoxItem Content="由外到内" />
                                                    </ComboBox>
                                                </Grid>

                                                <Grid Grid.Row="6" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="梯度方向" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <ComboBox Grid.Column="1" 
                                                              SelectedIndex="{Binding TiduDirection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                        <ComboBoxItem Content="由白到黑" />
                                                        <ComboBoxItem Content="由黑到白" />
                                                    </ComboBox>
                                                </Grid>

                                                <Grid Grid.Row="7" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="灰度值" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding GrayValue,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="8" Margin="3">
                                                    <TextBlock Text="JT定位检测设置(实测小于规格OK)" 
                                                   VerticalAlignment="Center"  
                                                   HorizontalAlignment="Center" 
                                                   Foreground="Blue"/>
                                                </Grid>

                                                <Grid  Grid.Row="9" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="捕捉圆心X" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" IsReadOnly="True"
                                                          Minimum="0" 
                                                          ValueFormat="#0.000"
                                                          Value="{Binding ActualX,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid  Grid.Row="10" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="捕捉圆心Y" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" IsReadOnly="True"
                                                          Minimum="0" 
                                                          ValueFormat="#0.000"
                                                          Value="{Binding ActualY,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="11" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="基准X" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding ReferenceX,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="12" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="基准Y" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding ReferenceY,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid  Grid.Row="13" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="基准实测" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" IsReadOnly="True"
                                                          Minimum="0" 
                                                          ValueFormat="#0.000"
                                                          Value="{Binding ReferenceActual,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="14" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="基准规格" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding ReferenceSpec,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="15" Margin="3">
                                                    <TextBlock Text="视觉补偿设置(比例=丝杆/像素)" 
                                                   VerticalAlignment="Center"  
                                                   HorizontalAlignment="Center" 
                                                   Foreground="Blue"/>
                                                </Grid>

                                                <Grid Grid.Row="16" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="补偿模式" Grid.Column="0" VerticalAlignment="Center" />
                                                    <ComboBox Grid.Column="1"
                                                  SelectedIndex="{Binding BuchangMode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                                        <ComboBoxItem Content="补偿关" />
                                                        <ComboBoxItem Content="补偿开" />
                                                    </ComboBox>
                                                </Grid>

                                                <Grid Grid.Row="17" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="比例尺X" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding MeasuringScaleX,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="18" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="比例尺Y" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <hc:NumericUpDown Grid.Column="1" 
                                            Minimum="0" 
                                            ValueFormat="#0.000"
                                            Value="{Binding MeasuringScaleY,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                                </Grid>

                                                <Grid Grid.Row="19" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="补偿上限" />
                                                    <hc:NumericUpDown
                                            Grid.Column="1"
                                            Minimum="0"
                                            ValueFormat="#0.000"
                                            Value="{Binding BuchangSpec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

                                            </Grid>
                                        </Border>

                                    </Grid>
                                </ScrollViewer>
                            </TabItem>

                            <TabItem Header="规格1" IsEnabled="{Binding isEnabled,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                                <ScrollViewer>
                                    <Grid>
                                        <Grid.ColumnDefinitions >
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Margin="3" BorderBrush="Black" BorderThickness="0.5">
                                            <Grid ClipToBounds="True">

                                                <Grid.RowDefinitions >
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0" Margin="3">
                                                    <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="Blue"
                                            Text="JT角度检测设置" />
                                                </Grid>

                                                <Grid Grid.Row="1" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="内界限" />
                                                    <hc:NumericUpDown
                                            Grid.Column="1"
                                            Minimum="0"
                                            ValueFormat="#0.000"
                                            Value="{Binding MinRadiusAng, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

                                                <Grid Grid.Row="2" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="外界限" />
                                                    <hc:NumericUpDown
                                            Grid.Column="1"
                                            Minimum="0"
                                            ValueFormat="#0.000"
                                            Value="{Binding MaxRadiusAng, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

                                                <Grid Grid.Row="3" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="灰度值" />
                                                    <hc:NumericUpDown
                                            Grid.Column="1"
                                            Minimum="0"
                                            ValueFormat="#0.000"
                                            Value="{Binding GrayValueAng, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

                                                <Grid Grid.Row="4" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="4*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="标记点类型" Grid.Column="0" VerticalAlignment="Center"/>
                                                    <ComboBox Grid.Column="1"
                                                  SelectedIndex="{Binding MarkMode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                                        <ComboBoxItem Content="暗面" />
                                                        <ComboBoxItem Content="亮面" />
                                                    </ComboBox>
                                                </Grid>

                                                <Grid Grid.Row="5" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="实测轮廓数" />
                                                    <hc:NumericUpDown
                                            Grid.Column="1"
                                            IsReadOnly="True"
                                            Minimum="0"
                                            ValueFormat="#0.000"
                                            Value="{Binding Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

                                                <Grid Grid.Row="6" Margin="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="4*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Text="实测最大面积" />
                                                    <hc:NumericUpDown
                                            Grid.Column="1"
                                            IsReadOnly="True"
                                            Minimum="0"
                                            ValueFormat="#0.000"
                                            Value="{Binding MaxAreaAng, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </Grid>

