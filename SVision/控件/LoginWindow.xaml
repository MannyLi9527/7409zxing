<Window x:Class="Vision.控件.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vision.控件"
        mc:Ignorable="d"
        Title="登录" Height="220" Width="380" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"  Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="账户" Grid.Column="1" Grid.Row="1" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox Name="un" Text="admin" Grid.Column="2" Grid.Row="1" FontSize="15" TextAlignment="Left" VerticalAlignment="Center" Margin="2" />

        <TextBlock Text="密码" Grid.Column="1" Grid.Row="2" FontSize="20" TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox Name="pw" Grid.Column="2" Grid.Row="2" FontSize="24" VerticalAlignment="Center" Margin="2" Text="{Binding pwshuru,  Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="TextDecorations">
                        <Setter.Value>
                            <TextDecorationCollection>
                                <TextDecoration>
                                    <TextDecoration.Pen>
                                        <Pen Brush="Black" DashCap="Round" EndLineCap="Round" StartLineCap="Round" Thickness="10">
                                            <Pen.DashStyle>
                                                <DashStyle Dashes="0.0,1.2" Offset="0.6" />
                                            </Pen.DashStyle>
                                        </Pen>
                                    </TextDecoration.Pen>
                                    <TextDecoration.Location>
                                        <TextDecorationLocation>Strikethrough</TextDecorationLocation>
                                    </TextDecoration.Location>
                                </TextDecoration>
                            </TextDecorationCollection>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="Transparent" />
                </Style>
            </TextBox.Style>
        </TextBox>

        <TextBlock Text="修改" Grid.Column="1" Grid.Row="3" FontSize="20" TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox Name="pwxiugai" Grid.Column="2" Grid.Row="3" FontSize="24" VerticalAlignment="Center" Margin="2"    Text="{Binding pwxiugai,  Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="TextDecorations">
                        <Setter.Value>
                            <TextDecorationCollection>
                                <TextDecoration>
                                    <TextDecoration.Pen>
                                        <Pen Brush="Black" DashCap="Round" EndLineCap="Round" StartLineCap="Round" Thickness="10">
                                            <Pen.DashStyle>
                                                <DashStyle Dashes="0.0,1.2" Offset="0.6" />
                                            </Pen.DashStyle>
                                        </Pen>
                                    </TextDecoration.Pen>
                                    <TextDecoration.Location>
                                        <TextDecorationLocation>Strikethrough</TextDecorationLocation>
                                    </TextDecoration.Location>
                                </TextDecoration>
                            </TextDecorationCollection>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="Transparent" />
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button Content="修改" Grid.Column="1" Grid.Row="4" Width="80" Margin="60,5,2,2" IsDefault="True"  Command="{Binding pwxiugaiCommand}"/>
        <Button Content="登录" Grid.Column="2" Grid.Row="4" Width="80" Margin="60,5,2,2" IsDefault="True" Click="Button_Click"/>

    </Grid>
</Window>
